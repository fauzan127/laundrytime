<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Models\KainKeluar;

class KainKeluarController extends Controller
{
// App\Http\Controllers\YourController.php
public function detailkainkeluar($id)
{
    // Pastikan nama variable sama dengan yang di view
    $transaksi = Transaksi::find($id); // atau model yang sesuai
    
    // Jika data tidak ditemukan, handle error
    if (!$transaksi) {
        abort(404, 'Transaksi tidak ditemukan');
    }
    
    return view('detailkainkeluar', compact('transaksi'));
}


}